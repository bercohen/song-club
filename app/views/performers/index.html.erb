<p id="notice"><%= notice %></p>

<h1>Performers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Concert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @performers.each do |performer| %>
      <tr>
        <td><%= performer.user.full_name %></td>
         <td><%= Concert.find(performer.concert_id).venue %>
             <%= Concert.find(performer.concert_id).date %></td>
        <td><%= link_to 'Show', performer %></td>
        <td><%= link_to 'Edit', edit_performer_path(performer) %></td>
        <td><%= link_to 'Destroy', performer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

